<h1>Listing tags</h1>

<table>
  <tr>
    <th>Tag name</th>
    <th></th>
  </tr>

  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
      <td><%= link_to 'Destroy', tag_path(tag),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    </tr>
  <% end %>

  <%= link_to 'New tag', new_tag_path %>
</table>
